<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ippoippo.joplin.mapper.UserMasterMapper">

	<resultMap id="user" type="com.ippoippo.joplin.dto.User">
		<id property="id" column="ID"/>
		<result property="name" column="NAME"/>
	</resultMap>

	<select id="newId" resultType="int">
		SELECT SEQ_USER.NEXTVAL
	</select>

	<select id="getUserById" parameterType="int" resultMap="user">
		SELECT
			UM.ID,
			UM.NAME
		FROM
			USER_MASTER UM
		WHERE
			UM.ID = #{id}
	</select>

	<insert id="createUser" parameterType="com.ippoippo.joplin.dto.User">
		INSERT INTO USER_MASTER
		(
			ID,
			NAME
		)
		VALUES
		(
			#{id},
			#{name}
		)
	</insert>

	<delete id="deleteUser" parameterType="Integer">
		DELETE FROM 
			USER_MASTER
		WHERE 
			ID = #{id}
	</delete>
</mapper>